            <Font name="System Italic" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="postalField" alignment="CENTER" layoutX="36.0" layoutY="258.0" prefHeight="45.0" prefWidth="185.0" promptText="Postal Code">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="phoneField" alignment="CENTER" layoutX="281.0" layoutY="258.0" prefHeight="45.0" prefWidth="185.0" promptText="Phone Number">
         <font>
            <Font name="System Italic" size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="addressField" alignment="CENTER" layoutX="53.0" layoutY="191.0" prefHeight="45.0" prefWidth="395.0" promptText="Address">
