<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerAddScreen">
   <children>
      <Label layoutX="175.0" layoutY="6.0" prefHeight="101.0" prefWidth="151.0" text="ADD">
         <font>
            <Font name="System Bold" size="69.0" />
         </font>
      </Label>
      <TextField fx:id="idField" alignment="CENTER" editable="false" layoutX="35.0" layoutY="124.0" prefHeight="45.0" prefWidth="185.0" promptText="ID (auto-generated)">
